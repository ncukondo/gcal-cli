{
  "permissions": {
    "allow": [
      "Bash(tmux capture-pane:*)",
      "Bash(tmux send-keys:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux list-windows:*)",
      "Bash(tmux kill-pane:*)",
      "Bash(tmux new-session:*)",
      "Bash(tmux has-session:*)",
      "Bash(which tmux)",
      "Bash(sleep:*)",
      "Read(/workspaces/gcal-cli--worktrees/**)",
      "Read(/tmp/claude-agent-states/**)",
      "Read(/tmp/claude-orchestrator/**)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/validate-worktree-path.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/block-force-push.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/check-worker-launch.sh"
          }
        ]
      }
    ]
  }
}
